# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                               controllers.HomeController.index

GET     /maps                           controllers.MapInfoController.maps

POST     /maps                          controllers.MapInfoController.newMap

GET     /maps/:id/delete               controllers.MapInfoController.deleteMap(id: Long)

GET    /maps/:id/update                controllers.UpdateRequestsController.updateMap(id: Long)

GET    /maps/update                    controllers.UpdateRequestsController.updateAll

GET    /maps/:id/download              controllers.MapInfoController.downloadMap(id: Long)

GET    /maps/deleteall                 controllers.MapInfoController.deleteAll

GET    /maps/addall                    controllers.MapInfoController.addAllMapInfo

GET    /maps/addrussia                 controllers.MapInfoController.addRussiaMapInfo

GET    /maps/android/:inp_version/:file    controllers.MapInfoController.sendByRequest(inp_version: String,file: String)

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
